lib boost-system : : <target-os>darwin <name>boost_system-mt <search>/opt/local/lib : : <include>/opt/local/include ;
lib boost-system : : <name>boost_system ;

exe dht-bootstrap

	: # sources
	src/main.cpp src/bdecode.cpp

	: # requirements
	<threading>multi
	<include>src
	<library>boost-system
	<toolset>gcc:<cxxflags>-std=c++11
	<toolset>darwin:<cxxflags>-std=c++11
	: # default build
	<link>static
	<threading>multi
	: # usage requirements
	;

exe dht-torture

	: # sources
	src/dht-torture.cpp src/bdecode.cpp

	: # requirements
	<threading>multi
	<include>src
	<library>boost-system
	<toolset>gcc:<cxxflags>-std=c++11
	<toolset>darwin:<cxxflags>-std=c++11
	: # default build
	<link>static
	<threading>multi
	: # usage requirements
	;

install stage : dht-bootstrap dht-torture : <location>. ;
